@page "/"
@model Vilcan_Andrea_Lab2.Pages.Books.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Books</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>

<form method="get" class="mb-3">
    <input type="text"
           name="searchString"
           value="@Model.CurrentFilter"
           placeholder="Search by title or author"
           class="form-control"
           style="max-width:300px; display:inline-block; margin-right:10px;" />

    <select name="CategoryID" class="form-select" style="width:200px; display:inline-block; margin-right:10px;">
        <option value="">All categories</option>
        @foreach (var cat in Model.CategoryList)
        {
            <option value="@cat.ID" selected="@(Model.SelectedCategory == cat.ID)">
                @cat.CategoryName
            </option>
        }
    </select>

    <input type="hidden" name="currentFilter" value="@Model.CurrentFilter" />

    <input type="submit" value="Filter" class="btn btn-primary" />
</form>

<table class="table">
    <thead>
        <tr>
            <th>
    <a asp-page="./Index"
       asp-route-sortOrder="@Model.TitleSort"
       asp-route-currentFilter="@Model.CurrentFilter"
       asp-route-CategoryID="@Model.SelectedCategory">
        @Html.DisplayNameFor(model => model.Book[0].Title)
    </a>
</th>
            <th>
    <a asp-page="./Index"
       asp-route-sortOrder="@Model.AuthorSort"
       asp-route-currentFilter="@Model.CurrentFilter"
       asp-route-CategoryID="@Model.SelectedCategory">
        Author
    </a>
</th>
            <th>
                @Html.DisplayNameFor(model => model.Book[0].Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Book[0].PublishingDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Book[0].Publisher.PublisherName)
            </th>
            <th>Categories</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Book)
{
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @if (item.Author != null)
                {
                    @($"{item.Author.FirstName} {item.Author.LastName}")
                }
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PublishingDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Publisher.PublisherName)
            </td>
            <td>
                @if (item.BookCategories != null && item.BookCategories.Any())
                {
                    @string.Join(", ", item.BookCategories.Select(c => c.Category.CategoryName))
                }
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>